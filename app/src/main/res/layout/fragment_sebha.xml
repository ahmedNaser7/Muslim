<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.tabs.sebha.SebhaFragment"

    >

    <ImageView
        android:id="@+id/sebha_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/sebha_head" />

    <ImageView
        android:id="@+id/sebha_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="123dp"
        android:adjustViewBounds="true"
        android:src="@drawable/sebha_body" />

    <Button
        android:id="@+id/counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/btn_shape"
        android:text="0" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/btn_shape_basic"
        android:text="سبحان الله"
        android:textSize="18sp" />

</FrameLayout>